{% extends 'base.html.twig' %}

{% block title %}FC-Pro | Formation Ã  venir{% endblock %}

{% block body %}
<h1>{{'Our formations' |trans }}</h1>

    <div id="carouselExampleCaptions" class="carousel carousel-dark slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
                aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
                aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
                aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            {% for paquetDe3Formations in formationsPerThree %}
            {%if paquetDe3Formations[1] is defined %}
            <div class="carousel-item carousel-fit" align="center">
                <img src="/uploads/images/{{ paquetDe3Formations[1].imageFileName }}" class="d-block w-50" alt="1">
                <div class="carousel-caption d-none d-md-block" style="background-color:rgb(211, 211, 211, 0.75);" >
                    <h5>{{ paquetDe3Formations[1].name }}</h5>
                    <div class="line-clamp"><p>{{ paquetDe3Formations[1].content| raw }}</p></div>
                </div>
            </div>
            {% endif %}
            {%if paquetDe3Formations[2] is defined %}
            <div class="carousel-item active carousel-fit" align="center">
                <img src="/uploads/images/{{ paquetDe3Formations[2].imageFileName }}" class="d-block w-50" alt="1">
                <div class="carousel-caption d-none d-md-block" style="background-color:rgb(211, 211, 211, 0.75);">
                    <h5>{{ paquetDe3Formations[2].name }}</h5>
                    <div class="line-clamp"><p>{{ paquetDe3Formations[2].content| raw }}</p></div>
                </div>
            </div>
            {% endif %}
            {% if paquetDe3Formations[3] is defined %}
            <div class="carousel-item carousel-fit" align="center">
                <img src="/uploads/images/{{ paquetDe3Formations[3].imageFileName }}" class="d-block w-50" alt="1">
                <div class="carousel-caption d-none d-md-block" style="background-color:rgb(211, 211, 211, 0.75);">
                    <h5>{{ paquetDe3Formations[3].name }}</h5>
                    <div class="line-clamp"><p>{{ paquetDe3Formations[3].content| raw }}</p></div>
                </div>
            </div>
            {% endif %}
            {% endfor %}
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
{% endblock %}
